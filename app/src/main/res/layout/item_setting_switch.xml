<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.databinding.ObservableField" />
        <variable
            name="titleS"
            type="String" />

        <variable
            name="summaryS"
            type="String" />

        <variable
            name="valueS"
            type="ObservableField&lt;Boolean>"
            />

    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:padding="@dimen/padding_large">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@android:id/title"
            style="@style/RobotoRegularStyle.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/switchButton"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@{titleS}"
            android:textColor="@color/text_dark_gray"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@android:id/summary"
            style="@style/RobotoRegularStyle.VerySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_toStartOf="@+id/switchButton"
            android:maxLines="2"
            android:text="@{summaryS}"
            app:visibleOrGone="@{summaryS != null}"
            tools:text="Summary" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/toolbar_button_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector"
            android:checked="@={valueS}" />

    </RelativeLayout>

</layout>